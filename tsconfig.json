{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    },

    "include": ["src/**/*"]
}